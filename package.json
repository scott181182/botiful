{
    "name": "botiful",
    "version": "0.2.1",
    "description": "An accessible framework for making modular Discord Bots",
    "license": "MIT",
    "repository": "https://github.com/scott181182/botiful",
    "author": "Scott Fasone",
    "keywords": [],
    "files": [
        "lib"
    ],
    "main": "lib/index.js",
    "typings": "lib/index.d.ts",
    "scripts": {
        "prepublishOnly": "npm run build",
        "prebuild": "echo Using TypeScript && tsc --version",
        "build": "tsc --pretty",
        "watch": "npm run build -- --watch",
        "test": "jest",
        "start": "npm run build && node ."
    },
    "dependencies": {
        "discord.js": "^13.6.0",
        "fs-extra": "^10.0.0",
        "winston": "^3.6.0"
    },
    "devDependencies": {
        "@types/fs-extra": "^9.0.13",
        "@types/jest": "^27.4.0",
        "@types/node": "^17.0.18",
        "jest": "^27.5.1",
        "ts-jest": "^27.1.3",
        "ts-node": "^10.5.0",
        "typescript": "^4.5.5"
    },
    "engines": {
        "node": ">=16.0.0"
    },
    "jest": {
        "transform": {
            ".(ts)": "<rootDir>/node_modules/ts-jest/preprocessor.js"
        },
        "modulePaths": [
            "<rootDir>/lib",
            "<rootDir>/node_modules/@types"
        ],
        "testRegex": "(/test/.*|\\.(test|spec))\\.(ts|js)$",
        "moduleFileExtensions": [
            "ts",
            "js",
            "json"
        ],
        "testEnvironment": "node"
    }
}
